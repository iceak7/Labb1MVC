@model IEnumerable<Customer>



<div class="row mt-3">
    <h2>All Customers</h2>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Telephone Number</th>
                <th scope="col">Address</th>
                <th scope="col">Zip Code</th>
                <th scope="col">City</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.PhoneNr</td>
                    <td>@customer.Address</td>
                    <td>@customer.ZipCode</td>
                    <td>@customer.City</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a type="button" asp-action="Detail" asp-route-id="@customer.CustomerId" class="btn btn-primary">
                                <i class="fa-solid fa-user"></i>
                            </a>
                            <a type="button" asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-warning">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                            <a type="button" asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-danger" onclick="return confirm('Are you sure to delete this customer?')">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row float-right col-md-4 justify-content-end">
    <a asp-action="AddNew" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Add New Customer
    </a>
</div>

